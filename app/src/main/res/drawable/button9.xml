<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    -<item android:state_pressed="true">


    -<shape>

    <solid android:color="#00ff33"/>

    <stroke android:color="#6a3ab2" android:width="10dp"/>

    <corners android:radius="5dp"/>

    <padding android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp"/>

</shape>

</item>


    -<item>


    -<shape>

    <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff"/>

    <stroke android:color="#0099ff" android:width="1dp"/>

    <corners android:radius="0dp"/>

    <padding android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp"/>

</shape>

</item>

</selector>