<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    -<item android:state_pressed="true">


    -<shape>

    <solid android:color="#a276eb"/>

    <stroke android:color="#6a3ab2" android:width="1dp"/>

    <corners android:radius="3dp"/>

    <padding android:bottom="10dp" android:right="10dp" android:top="10dp" android:left="10dp"/>

</shape>

</item>


    -<item>


    -<shape>

    <gradient android:angle="270" android:endColor="#0099FF" android:startColor="#ffffff"/>

    <stroke android:color="#6a3ab2" android:width="1dp"/>

    <corners android:radius="4dp"/>

    <padding android:bottom="10dp" android:right="10dp" android:top="10dp" android:left="10dp"/>

</shape>

</item>
</selector>