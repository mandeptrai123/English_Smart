<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TOEIC.Reading_Toeic">
    <RelativeLayout
        android:id="@+id/rela_head_reading"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:id="@+id/text_time_read"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12dp"
            android:text="3:00:00"
            android:layout_width="120dp"
            android:layout_height="30dp" />
        <Button
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_round_rect"
            android:text="Submit"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_below="@id/text_time_read"
            android:layout_width="100dp"
            android:layout_height="40dp" />
        <TextView
            android:textColor="#000000"
            android:text="Question: 100"
            android:layout_centerInParent="true"
            android:layout_width="90dp"
            android:layout_height="30dp" />
        <com.airbnb.lottie.LottieAnimationView
            app:lottie_loop="true"
            android:id="@+id/sound_read_toeic"
            app:lottie_fileName="as_sound.json"
            android:layout_margin="4dp"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </RelativeLayout>
<android.support.v4.view.ViewPager
    android:layout_below="@id/rela_head_reading"
    android:id="@+id/view_pager_toeic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
</android.support.v4.view.ViewPager>
</RelativeLayout>
