<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Algorithm"
        android:textColor="#00CC99"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/word_voca_adapter"
        android:layout_width="120dp"
        android:layout_height="50dp"
     />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/word_voca_adapter"
        android:id="@+id/name_voca_adapter"
        android:textColor="#FF9900"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Thuật Toán"
        android:layout_height="50dp"

        />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/sound_voca_adapter"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/micro_voca"
        android:layout_toRightOf="@id/word_voca_adapter"
        android:background="@drawable/miscro_gg"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</RelativeLayout>