<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_rect"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="invisible"
        android:layout_below="@id/card_img_part2"
        android:id="@+id/lottie_correct_p2_op"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="correct.json"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="invisible"
        android:layout_below="@id/card_img_part2"
        android:id="@+id/lottie_wrong_p2_op"
        app:lottie_autoPlay="true"
        app:lottie_fileName="erro.json"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <android.support.v7.widget.CardView
        android:id="@+id/card_img_part2"
        app:cardElevation="10dp"
        android:layout_margin="7dp"
        app:cardCornerRadius="12dp"
        android:layout_below="@id/head_part_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ec.dina.btefonts.TextViewFonts
                app:dm_font="convincing"
                android:textStyle="bold"
                android:textSize="26dp"
                android:gravity="center"
                android:textColor="#000000"
                android:padding="10dp"
                android:text="Head Question And Choose Answer"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:id="@+id/item_text_part2"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <RadioGroup
        android:id="@+id/group_but_part2"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lottie_correct_p2_op"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/part2_but1"
            android:text="A"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="22dp"
            android:background="@drawable/bg_button"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/part2_but2"
            android:text="B"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="22dp"
            android:background="@drawable/bg_button"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/part2_but3"
            android:text="C"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="22dp"
            android:background="@drawable/bg_button"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RadioGroup>


</RelativeLayout>