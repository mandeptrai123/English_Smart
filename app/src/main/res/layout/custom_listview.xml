<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/button9"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_unit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Unit 16"
        android:textColor="#9933cc"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/img_menu_unit"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_unit"
        android:background="@drawable/button8"
        android:layout_alignParentLeft="true" />

    <TextView
        android:background="@drawable/button_green"
        android:id="@+id/text_menu_unit"
        android:padding="10dp"
        android:textColor="#6633CC"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:text="THE ASSOCIATION OF SOUTHEAST ASIAN NATIONS"
        android:layout_toRightOf="@id/img_menu_unit"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <TextView
        android:id="@+id/nhanxet_menu_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_menu_unit"
        android:layout_toEndOf="@+id/name_unit"
        android:background="@drawable/button8"
        android:text="Chưa Hoàn Thành"
        android:textColor="#ff0066"
        android:textSize="17dp"
        tools:ignore="RtlCompat" />

</RelativeLayout>