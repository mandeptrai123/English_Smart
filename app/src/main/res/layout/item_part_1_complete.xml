<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/card_img_part1_complete"
        app:cardElevation="10dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="12dp"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/item_img_part1_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_loop="true"
        app:lottie_fileName="correct.json"
        android:layout_centerHorizontal="true"
        android:id="@+id/lottie_correct_p1"
        android:layout_below="@id/card_img_part1_complete"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <com.airbnb.lottie.LottieAnimationView
        app:lottie_fileName="erro.json"
        app:lottie_loop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lottie_wrong_p1"
        android:layout_below="@id/card_img_part1_complete"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <RadioGroup
        android:layout_below="@id/lottie_wrong_p1"
        android:id="@+id/group_but_part1_complete"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="@drawable/bg_button"
            android:id="@+id/part1_but1_complete"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="@drawable/bg_button"
            android:id="@+id/part1_but2_complete"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="@drawable/bg_button"
            android:id="@+id/part1_but3_complete"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="@drawable/bg_button"
            android:id="@+id/part1_but4_complete"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RadioGroup>

</RelativeLayout>