<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TOEIC.part_4.Part_4">
    <RelativeLayout
        android:id="@+id/head_part_4"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="00 00 00"
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/time_part4"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/title_part4"
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/time_part4"
            android:text="Incomplete sentence"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:layout_below="@id/head_part_4"
        android:layout_above="@id/bot_part4"
        android:id="@+id/viewpager_part4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:id="@+id/bot_part4"
        android:layout_margin="4dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/but_option_p4"
            android:textColor="#ffffff"
            android:text="Option"
            android:background="@drawable/bg_round_rect"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/but_submit_p4"
            android:text="Submit"
            android:textColor="#ffffff"
            android:background="@drawable/bg_round_rect"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="40dp" />

        <com.airbnb.lottie.LottieAnimationView
            app:lottie_colorFilter="#00FF33"
            android:layout_centerVertical="true"
            app:lottie_autoPlay="true"
            android:layout_alignParentRight="true"
            android:id="@+id/lot_write_p4"
            app:lottie_fileName="write.json"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </RelativeLayout>
</RelativeLayout>