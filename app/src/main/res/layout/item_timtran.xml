<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView
        android:background="#CCFF33"
        android:id="@+id/pro_timtran"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/colorAccent"
        app:lottie_fileName="timtran.json"
        app:lottie_loop="true"/>
    <com.airbnb.lottie.LottieAnimationView
        app:lottie_autoPlay="true"
        app:lottie_fileName="simple.json"
        android:background="#CCFF33"
        android:layout_width="60dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/timtran_text"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:text="Đang Tìm Trận"
        android:layout_below="@id/pro_timtran"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <Button
        android:id="@+id/item_cancel_timtran"
        android:onClick="huy_firebase"
        android:background="#FF9999"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Hủy"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/timtran_text"
        android:layout_width="120dp"
        android:layout_height="50dp" />
</RelativeLayout>