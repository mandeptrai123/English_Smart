<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button"
    tools:context=".trangchu.Vocabulary.Calendar_day">
    <TextView
        android:id="@+id/title_calendar"
        android:textColor="#CC00FF"
        android:text="First Week"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/button8"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <ListView
        android:id="@+id/gridview_voca_day"
        android:numColumns="1"
        android:layout_below="@id/title_calendar"
        android:layout_width="match_parent"
        android:layout_height="400dp"></ListView>
    <Button
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Start"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button9"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</RelativeLayout>