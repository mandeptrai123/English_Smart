<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    app:cardElevation="10dp"
    app:cardCornerRadius="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/dialog_score_marked"
            android:textSize="21dp"
            android:textColor="#000000"
            android:padding="10dp"
            android:text="Bạn Làm Đúng : 12/12"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <com.airbnb.lottie.LottieAnimationView
            app:lottie_fileName="great_icon.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:id="@+id/lottie_great"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dialog_score_marked"
            android:layout_width="160dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/but_show_ans"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:text="Hiện Đáp Án"
            android:layout_margin="5dp"
            android:background="@drawable/bg_round_rect"
           android:layout_below="@id/lottie_great"
            android:layout_width="120dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/but_next_marked"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:text="NEXT"
            android:layout_margin="5dp"
            android:background="@drawable/bg_round_rect"
            android:layout_alignParentRight="true"
           android:layout_below="@id/lottie_great"
            android:layout_width="120dp"
            android:layout_height="40dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>