<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FF33"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView
        app:lottie_colorFilter="#00FF33"
        android:background="#ffffff"
        android:id="@+id/lottie_back"
        android:layout_centerHorizontal="true"
        app:lottie_fileName="back.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/text_doyou_exit"
        android:layout_below="@+id/lottie_back"
        android:textStyle="bold"
        android:text="Do You Want Exit ?"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="21dp"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <Button
        android:id="@+id/but_yes_back"
        android:text="YES"
        android:textSize="21dp"
        android:textColor="#00FF33"
        android:background="#ffffff"
        android:layout_margin="5dp"
        android:layout_below="@id/text_doyou_exit"
        android:layout_width="120dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/but_no_back"
        android:text="NO"
        android:textSize="21dp"
        android:textColor="#00FF33"
        android:background="#ffffff"
        android:layout_margin="5dp"
        android:layout_below="@id/text_doyou_exit"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:layout_height="40dp" />

</RelativeLayout>