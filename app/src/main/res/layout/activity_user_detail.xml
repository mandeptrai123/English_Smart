<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button"
    tools:context=".Profile.User_detail">

    <ImageView
        android:id="@+id/img_user_see"
        android:layout_margin="10dp"
        android:layout_width="160dp"
        android:layout_height="180dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo_user_see"
        android:src="@drawable/logo_iuh"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:padding="3dp"
        android:background="@drawable/button9"
        android:id="@+id/detail_school"
        android:gravity="center"
        android:text="Công Nghiệp Tp.HCM University"
        android:textColor="#FF6600"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_toRightOf="@id/img_user_see"
        android:layout_below="@id/logo_user_see"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/button9"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#3399FF"
        android:text="Huỳnh Trọng Mẫn"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/img_user_see"
        android:id="@+id/name_user_see"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:textStyle="italic"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:text="Majors"
        android:layout_below="@id/name_user_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detail_majors"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/name_user_see"
        android:text="Thiết Kế Thời Trang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:background="@drawable/icon_cntt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/name_user_see"
        android:layout_toRightOf="@id/detail_majors"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:layout_below="@id/detail_majors"
        android:textStyle="italic"
        android:textSize="18dp"
        android:text="Achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detail_achievements"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="23dp"
        android:text="Top 10 Season 1"
        android:layout_marginTop="35dp"
        android:layout_below="@id/detail_majors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Phone"
        android:textStyle="italic"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:layout_below="@id/detail_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detail_phone"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="You Can't See"
        android:layout_marginTop="35dp"
        android:layout_below="@id/detail_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:src="@drawable/add_friend_icon"
        android:layout_below="@id/detail_phone"
        android:layout_width="50dp"
        android:layout_height="50dp" />


</RelativeLayout>
