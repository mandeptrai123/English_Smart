<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_margin="2dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="12dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <RelativeLayout
        android:background="@drawable/bg_round_rect"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="#ffffff"
            android:id="@+id/relative_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_main_voca"
                android:text="Xin Chào KenKo"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
               android:layout_centerHorizontal="true"
                android:textStyle="italic"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <com.airbnb.lottie.LottieAnimationView
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="as_mic.json"
                android:id="@+id/item_mic_voca"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/item_des_voca"
                android:textSize="14dp"
                android:textColor="#000000"
                android:text="Tính từ : ......................"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/item_main_voca"
                android:layout_toRightOf="@id/item_mic_voca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/item_alter_back"

                android:layout_marginTop="70dp"
                android:layout_marginLeft="270dp"
                android:layout_width="80dp"
                android:layout_height="40dp" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/relative_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/item_extend"
               app:lottie_fileName="as_query.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/first_time"
                android:gravity="center"
                android:text="First Time"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#FF0000"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/text_words_voca"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/item_alter_go"
                android:layout_marginTop="70dp"
              android:layout_marginLeft="270dp"
                android:layout_width="80dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/text_words_voca"
                android:gravity="center"
                android:text="Hello KenKo"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="italic"
                android:layout_marginLeft="100dp"
                android:layout_width="160dp"
                android:layout_height="40dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="100dp"
                android:layout_width="120dp"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/star_one"
                    android:src="@drawable/sao_on"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/star_two"
                    android:src="@drawable/sao_on"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/star_three"
                    android:src="@drawable/sao_on"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>