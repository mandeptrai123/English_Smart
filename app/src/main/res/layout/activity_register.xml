<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/button_green"
    tools:context=".trangchu.Register.Register">

    <ImageView
        android:id="@+id/img_register"
        android:layout_margin="5dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/click_picture"
        android:onClick="click_picture_register"
        android:background="@drawable/button9"
        android:textSize="25dp"
        android:textColor="#006699"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Chọn Ảnh"
        android:layout_toRightOf="@id/img_register"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <TextView
        android:textStyle="bold"
        android:id="@+id/name_text"
        android:layout_marginTop="7dp"
        android:background="@drawable/button9"
        android:text="Tên"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@id/img_register"
        android:layout_width="65dp"
        android:layout_height="30dp" />
    <EditText
        android:id="@+id/edit_name_register"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/text_school"
        android:layout_marginTop="7dp"
        android:background="@drawable/button9"
        android:text="Trường"
        android:textSize="20dp"
        android:layout_below="@id/edit_name_register"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <EditText
        android:gravity="center"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/edit_sdt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sdt" />
    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/text_khoa"
        android:layout_marginTop="7dp"
        android:background="@drawable/button9"
        android:text="Ngành"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@id/spinner_school"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <EditText
        android:textSize="20dp"
        android:padding="5dp"
        android:id="@+id/edit_khoa_register"
        android:layout_marginTop="5dp"
        android:layout_below="@id/text_khoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_sdt"
        android:layout_below="@id/edit_khoa_register"
        android:background="@drawable/button9"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="SDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner_school"
        android:layout_margin="2dp"
       android:pointerIcon="grab"
        android:layout_below="@id/text_school"
        android:layout_width="match_parent"
        android:layout_height="40dp"></Spinner>



<Button
    android:onClick="click_save_register"
    android:textColor="#006699"
    android:background="@drawable/button8"
    android:textSize="25dp"
    android:text="SAVE"
    android:layout_margin="5dp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="50dp" />

</RelativeLayout>