<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trangchu.game_choose.Game_ghepchu">
    <TextView
        android:id="@+id/title_game_ghepchu"
        android:textSize="25dp"
        android:text="Xếp Xe Thành 1 Hàng Hợp lí"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/cau1_game_ghepchu"
        android:layout_below="@id/title_game_ghepchu"

        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <Button
        android:id="@+id/cau2_game_ghepchu"

        android:layout_below="@id/cau1_game_ghepchu"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <Button
        android:id="@+id/cau3_game_ghepchu"

        android:layout_below="@id/cau2_game_ghepchu"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <Button
        android:id="@+id/cau4_game_ghepchu"

        android:layout_below="@id/cau3_game_ghepchu"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <Button
        android:id="@+id/cau5_game_ghepchu"

        android:layout_below="@id/cau4_game_ghepchu"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <Button
        android:text="He is a Teacher"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@id/cau5_game_ghepchu"
        android:id="@+id/cau6_game_ghepchu"

        android:layout_width="match_parent"
        android:layout_height="80dp" />

</RelativeLayout>