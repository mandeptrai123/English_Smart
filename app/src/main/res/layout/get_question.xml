<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_rect"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_1"
        android:layout_alignParentTop="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="3dp"
                android:layout_alignParentRight="true"
                android:id="@+id/img_user_1_get"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/name_user_1_get"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/img_user_1_get"
                android:gravity="center"
                android:padding="5dp"
                android:text="Jack Hamper"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:textSize="16dp"
                android:id="@+id/score_get_1"
                android:layout_marginRight="2dp"
                android:padding="2dp"
                android:text="Score : 300"
                android:textColor="#FF0000"
                android:textStyle="italic"
                android:layout_toLeftOf="@id/img_user_1_get"
                android:layout_below="@id/name_user_1_get"
                android:layout_width="wrap_content"
                android:layout_height="28dp" />
            <ImageView
                android:layout_toLeftOf="@id/name_user_1_get"

                android:layout_width="40dp"
                android:layout_height="50dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <SeekBar
        android:layout_below="@id/cardview_1"
        android:id="@+id/seek_bar_1_get"
        android:layout_marginBottom="5dp"
        android:progressDrawable="@drawable/seekbar_drawable_progress"
        android:thumb="@drawable/seekbar_drawable_thumb"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <RelativeLayout
        android:id="@+id/relative_mid_get"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/relative_get_1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/card_1_get"
                android:layout_margin="2dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_width="0dp">
                <TextView
                    android:onClick="get_a"
                    android:background="#110000"
                    android:id="@+id/text_1"
                    android:text="Language"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_height="80dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_2_get"
                android:layout_margin="2dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_width="0dp">
                <TextView
                    android:onClick="get_b"
                    android:textSize="24dp"
                    android:textColor="#ffffff"
                    android:background="#0099FF"
                    android:id="@+id/text_2"
                    android:text="Honest"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_height="80dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>




        <LinearLayout
            android:layout_below="@id/relative_get_1"
            android:id="@+id/relative_get_2"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/card_3_get"
                android:layout_margin="2dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_width="0dp">
                <TextView
                    android:onClick="get_c"
                    android:textSize="24dp"
                    android:textColor="#ffffff"
                    android:background="#FF9900	"
                    android:id="@+id/text_3"
                    android:text="Triangle"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_height="80dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_4_get"
                android:layout_margin="2dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_width="0dp">
                <TextView
                    android:onClick="get_d"
                    android:textSize="24dp"
                    android:textColor="#ffffff"
                    android:background="#FF3300"
                    android:id="@+id/text_4"
                    android:text="Lackadaisical"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_height="80dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/text_wait_get"
        android:text="Đợi Đối Thủ Chọn....."
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#220000"
        android:layout_marginTop="5dp"
        android:background="#FFCC33"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/relative_mid_get"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <SeekBar
        android:layout_marginBottom="5dp"
        android:progressDrawable="@drawable/seekbar_drawable_progress"
        android:thumb="@drawable/seekbar_drawable_thumb"
        android:id="@+id/seek_bar_2_get"
        android:layout_above="@id/relative_get_bottom"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <RelativeLayout
        android:id="@+id/relative_get_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="80dp">
        <android.support.v7.widget.CardView
            android:layout_margin="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:id="@+id/relavtive_user2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user_2_get"
                    android:layout_width="50dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/name_user_2_get"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:text="Jack Hamper"
                    android:textColor="#9933FF"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_toRightOf="@id/img_user_2_get"
                    android:layout_width="200dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textSize="16dp"
                    android:id="@+id/score_get_2"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:text="Score :300"
                    android:textStyle="italic"
                    android:textColor="#FF0000"
                    android:layout_toRightOf="@id/img_user_2_get"
                    android:layout_below="@id/name_user_2_get"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp" />
                <ImageView
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@id/name_user_2_get"
                    android:layout_width="40dp"
                    android:layout_height="50dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </RelativeLayout>
</RelativeLayout>