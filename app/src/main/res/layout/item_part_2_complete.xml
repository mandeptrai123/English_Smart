<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="15dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="correct.json"
        android:id="@+id/lottie_correct_part2"
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="15dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="erro.json"
        android:id="@+id/lottie_wrong_part2"
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:layout_margin="4dp"
        android:id="@+id/question_part2_complete"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/lottie_correct_part2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/group_but_part2_complete"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/question_part2_complete"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/part2_but1_complete"
            android:text="A"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/bg_button"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/part2_but2_complete"
            android:text="B"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/bg_button"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/part2_but3_complete"
            android:text="C"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/bg_button"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RadioGroup>

</RelativeLayout>