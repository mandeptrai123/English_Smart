<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/scroll_first"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <TextView
            android:id="@+id/text_turoial_part3"
            android:padding="4dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <ScrollView
        android:layout_below="@id/scroll_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:visibility="invisible"
                    app:lottie_fileName="correct.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_margin="3dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/lottie_correct_part3_1_complete"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <com.airbnb.lottie.LottieAnimationView
                    android:visibility="invisible"
                    app:lottie_fileName="erro.json"
                    app:lottie_autoPlay="true"
                    android:layout_margin="3dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/lottie_wrong_part3_1_complete"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="2dp"
                    android:id="@+id/item_question1_part3_complete"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/group_radio_p3_1_complete"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but1_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but2_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but3_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but4_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:visibility="invisible"
                        app:lottie_fileName="correct.json"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_margin="3dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/lottie_correct_part3_2_complete"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <com.airbnb.lottie.LottieAnimationView
                        android:visibility="invisible"
                        app:lottie_fileName="erro.json"
                        app:lottie_autoPlay="true"
                        android:layout_margin="3dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/lottie_wrong_part3_2_complete"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                </RelativeLayout>
                <TextView
                    android:layout_margin="2dp"

                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="4dp"
                    android:id="@+id/item_question2_part3_complete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/group_radio_p3_2_complete"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but5_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but6_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but7_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but8_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <com.airbnb.lottie.LottieAnimationView
                        android:visibility="invisible"
                        app:lottie_fileName="correct.json"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_margin="3dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/lottie_correct_part3_3_complete"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <com.airbnb.lottie.LottieAnimationView
                        android:visibility="invisible"
                        app:lottie_fileName="erro.json"
                        app:lottie_autoPlay="true"
                        android:layout_margin="3dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/lottie_wrong_part3_3_complete"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                </RelativeLayout>
                <TextView
                    android:layout_margin="2dp"
                    android:id="@+id/item_question3_part3_complete"

                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/group_radio_p3_3_complete"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but9_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but10_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but11_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <RadioButton
                        android:background="@drawable/bg_button"
                        android:id="@+id/part3_but12_complete"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>